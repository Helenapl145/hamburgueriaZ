<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo principal do tema -->
    <style name="Theme.HamburgueriaZ" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Personalização do texto -->
        <item name="android:textAppearance">@style/EstiloTexto</item>
    </style>

    <!-- Estilo de texto personalizado -->
    <style name="EstiloTexto">
        <!-- Ajustes textuais -->
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

</resources>
